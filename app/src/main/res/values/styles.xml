<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="MyInputTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/primary_green</item>
        <item name="prefixTextColor">@color/secondary_green</item>
        <item name="hintTextColor">@color/primary_green</item>
        <item name="placeholderTextColor">@color/primary_green</item>
        <item name="boxStrokeColor">@color/primary_green</item>
    </style>

    <style name="MyLoginTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/primary_green</item>
        <item name="prefixTextColor">@color/secondary_green</item>
        <item name="hintTextColor">@color/primary_green</item>
        <item name="placeholderTextColor">@color/primary_green</item>
        <item name="boxStrokeColor">@color/primary_green</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="startIconTint">@color/secondary_green</item>
    </style>

    <style name="MyCancelButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MyOkButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_green</item>
    </style>

    <style name="NavigationDrawerText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>