<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.NewProductFragment">


    <LinearLayout
        android:id="@+id/frame_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/new_product_bottom_sheet_confirmation_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New product"
            android:textColor="@color/green_dark"
            android:textSize="24sp"
            android:layout_margin="12dp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/product_name_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:hint="Name"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/green_dark"
        app:hintTextColor="@color/green_dark"
        android:outlineAmbientShadowColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/frame_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_name"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/required_name_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name can't be blank"
        android:textColor="@color/design_default_color_error"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/product_name_layout"
        app:layout_constraintStart_toStartOf="@id/product_name_layout"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/product_brand_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:hint="Brand"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/green_dark"
        app:hintTextColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_name_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_brand"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/optional_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Optional)"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toTopOf="@id/product_brand_layout"
        app:layout_constraintEnd_toEndOf="@id/product_brand_layout"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/product_price_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_weight="2"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:hint="Price"
        app:prefixText="R$"
        app:boxStrokeColor="@color/green_dark"
        app:hintTextColor="@color/green_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/product_quantity_layout"
        app:layout_constraintTop_toBottomOf="@id/product_brand_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_price"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/product_quantity_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="32dp"
        android:hint="Qnt"
        app:boxStrokeColor="@color/green_dark"
        app:hintTextColor="@color/green_dark"
        app:layout_constraintStart_toEndOf="@id/product_price_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_brand_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/product_quantity"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:padding="4dp"
        android:gravity="end"
        android:background="@drawable/new_product_bottom_sheet_confirmation_background"
        app:layout_constraintTop_toBottomOf="@id/product_quantity_layout">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/green_dark"
            android:text="CANCEL"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="@color/green_dark"
            android:text="SAVE"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>